<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Capa_UI.Views.InsertarDepartamento"
             xmlns:local="clr-namespace:Capa_UI.ViewModels"
             Title="InsertarDepartamento">

    <ContentPage.BindingContext>
        <local:clsInsertarDepartamento/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Spacing="10"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">

        <Label Text="Id Departamento"/>
        <Entry Text="{Binding Depto.IdDepartamento}"
               Keyboard="Numeric"/>

        <Label Text="Nombre Departamento"/>
        <Entry Text="{Binding Depto.Nombre}"/>

        <HorizontalStackLayout>
            <Button Text="Guardar" Command="{Binding GuardarCommand}" WidthRequest="100"/>
            <Button Text="Cancelar" Command="{Binding CancelarCommand}" WidthRequest="100"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>