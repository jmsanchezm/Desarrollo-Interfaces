<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Capa_UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Capa_UI.Views">

    <ShellContent
        Title="Inicio"
        Icon="inicio.png"
        ContentTemplate="{DataTemplate local:PagInicial}" />

    <ShellContent
        Title="Listado de personas"
        Icon="person.png"
        ContentTemplate="{DataTemplate local:ListadoPersonas}" />
    
    <ShellContent
        Title="Listado de departamentos"
        Icon="departamento.png"
        ContentTemplate="{DataTemplate local:ListadoDepartamentos}"/>

</Shell>
