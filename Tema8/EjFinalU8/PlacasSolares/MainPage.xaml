<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlacasSolares.MainPage">

        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        <Image
                Source="logo_verde.png"
                WidthRequest="200"
                VerticalOptions="Start"/>

        <Entry
                x:Name="Username"
                TextColor="#51B178"
                Placeholder="Usuario"
                PlaceholderColor="#51B178"
                BackgroundColor="#F0F0F0"/>

            <Entry
                x:Name="Password"
                Placeholder="Contraseña"
                PlaceholderColor="#51B178"
                TextColor="#51B178"
                BackgroundColor="#F0F0F0"/>

            <Button
                Text="Acceder"
                TextColor="White"
                WidthRequest="100"
                BackgroundColor="#51B178"
                Clicked="onClickedButton"/>

            <Label
                x:Name="TextoCredenciales"
                HorizontalOptions="Center"
                TextColor="Red"
                Text="*Debe introducir las credenciales*"
                IsVisible="False"/>

    </VerticalStackLayout>

</ContentPage>
