<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Shell.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Shell"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem
        FlyoutDisplayOptions="AsMultipleItems">
        <Tab
            Title="Miedo"
            Icon="miedo.png">
            <ShellContent
                Title="Gore"
                ContentTemplate="{DataTemplate views:GorePage}" />
            <ShellContent
                Title="Terror"
                ContentTemplate="{DataTemplate views:TerrorPage}" />
        </Tab>
    </FlyoutItem>

    <ShellContent
        Title="Aventura"
        Icon="aventura.png"
        ContentTemplate="{DataTemplate views:AventuraPage}" />
    <ShellContent
        Title="Comedia"
        Icon="comedia.png"
        ContentTemplate="{DataTemplate views:ComediaPage}" />
    <ShellContent
        Title="Romance"
        Icon="romance.png"
        ContentTemplate="{DataTemplate views:RomancePage}" />

</Shell>
