<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_07_Pages.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry
                x:Name="Nombre"
                 Placeholder="Introduzca su nombre"/>
            <Entry
                x:Name="Apellidos"
                Placeholder="Introduzca sus apellidos"/>

            <Button
                x:Name="BtnPaginaTabbed"
                Text="PaginaTabbed"
                Clicked="OnClicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="BtnPage4"
                Text="Pagina 4"
                Clicked="onClickedPag4"
                HorizontalOptions="Center" />

            <Button
                x:Name="BtnPage5"
                Text="Pagina 5"
                Clicked="onClickedPag5"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
