<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1.MainPage">

    <ScrollView>

        <VerticalStackLayout
            VerticalOptions="Center" >
            <Slider x:Name="sliderFont"
                    MaximumTrackColor="BlueViolet"
                    MinimumTrackColor="LightGray"
                    Minimum="0"
                    Maximum="50"
                    WidthRequest="250"
                    Value="{Binding Source={x:Reference TamañoFuente}, Mode=TwoWay}"
                    Margin="0,0,0,50" />

            <Label
                Text="Simple Text"
                FontSize="{Binding Source={x:Reference sliderFont}, Path=Value , Mode=OneWay}"
                HorizontalOptions="Center"/>

            <Entry
                x:Name="TamañoFuente"
                Keyboard="Numeric"
                Text="{Binding Source={x:Reference sliderFont}, Path=Value, Mode=TwoWay, StringFormat='{0:F0}'}"
                WidthRequest="250"
                Margin="0,50,0,0"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
